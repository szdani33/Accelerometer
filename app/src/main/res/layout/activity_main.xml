<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel_szabo.accelerometer.MainActivity">

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startRecording"
        android:text="@string/button_start"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_stop"
        android:layout_marginTop="60dp"

        android:textSize="24sp"
        android:padding="15sp" />

    <Button
        android:id="@id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopRecording"
        android:text="@string/button_stop"

        app:layout_constraintTop_toTopOf="@id/button_start"
        app:layout_constraintLeft_toRightOf="@id/button_start"
        app:layout_constraintRight_toRightOf="parent"

        android:textSize="24sp"
        android:padding="15sp" />

    <Button
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showGraph"
        android:text="@string/button_show"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:padding="15sp" />

</android.support.constraint.ConstraintLayout>
